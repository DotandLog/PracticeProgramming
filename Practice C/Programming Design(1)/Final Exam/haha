for(int i = 0 ; i<20 ; i++){
        for(int j = i+1 ; j<20 ; j++){
            if(strlen(fruit[i])>=strlen(fruit[j])){
                max=fruit[i];
            }
            else{
                max=fruit[j];
            }
        }
    }
    max_fruit = max;
    for(int i = 0 ; i<20 ; i++){
        if(strlen(max)==strlen(fruit[i])){
            strcat(max_fruit,&fruit[i][0]);
        }
    }
    for(int i = 0 ; max_fruit[i]!='\0' ; i++){
        printf("%c\n",max_fruit[i]);
    }